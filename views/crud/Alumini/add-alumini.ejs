    <div class="form-container">
        <h1>Add Alumini</h1>

        <form action="/add-alumini" method="POST">
            <label for="name">Name:</label>
            <input type="text" id="name" name="name" required>

            <label for="contributionid">Contribution ID:</label>
            <input type="text" id="contributionid" name="contributionid" required>
            <!-- If you want to populate the contribution ID dynamically, you can use JavaScript to fetch and display values -->

            <button type="submit">Add Alumini</button>
        </form>

    </div>

