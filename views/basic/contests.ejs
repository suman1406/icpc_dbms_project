<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>ICPC Contests</title>
    <link href="https://fonts.googleapis.com/css2?family=Raleway:ital,wght@0,300;0,400;1,100;1,400&display=swap"
        rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
    <style>
        * {
            margin: 0;
            padding: 0;
            font-family: 'Raleway', sans-serif;
        }

        body {
            background-color: #705260 !important;
        }

        .contest-card {
            max-width: 18rem;
            margin: 20px;
        }

        .container {
            margin-top: 50px;
            display: flex;
            flex-wrap: wrap;
        }

        h1 {
            margin: 6rem;
        }
    </style>
</head>

<body>

    <nav class="navbar navbar-expand-lg bg-body-tertiary">
        <div class="container-fluid">
            <a class="navbar-brand" href="/home">Home</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNavAltMarkup"
                aria-controls="navbarNavAltMarkup" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
                <div class="navbar-nav">
                    <a class="nav-link active" aria-current="page" href="/about">About</a>
                    <a class="nav-link" href="/contributions">Contributions</a>
                    <a class="nav-link" href="/champions">Champions</a>
                    <a class="nav-link" href="/contests">Contests</a>
                    <a class="nav-link" href="/alumini">Alumini</a>

                </div>
            </div>
        </div>
    </nav>

    <h1 class="mt-5 mb-4">ICPC Contests</h1>

    <div class="container">
        <% contests.forEach((contest)=> { %>
            <div class="card contest-card">
                <div class="card-body">
                    <h5 class="card-title">
                        Year: <%= contest.year %>
                    </h5>
                    <p class="card-text">
                        Host City: <%= contest.host_city %><br>
                            Host Country: <%= contest.host_country %><br>
                                Rankings: <%= contest.rankings %><br>
                                    Champion: <%= contest.championid %>
                    </p>
                </div>
            </div>
            <% }); %>
    </div>

    <!-- Buttons for Add, Delete, Update -->
    <div class="mt-4" style="margin-left: 30%; margin-bottom: 3rem;">
        <button class="btn btn-primary" onclick="window.location.href='/add-contest'">Add Contest</button>
        <button class="btn btn-danger" onclick="window.location.href='/delete-contest'">Delete Contest</button>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.11.8/dist/umd/popper.min.js"
        integrity="sha384-I7E8VVD/ismYTF4hNIPjVp/Zjvgyol6VFvRkX/vR+Vc4jQkC+hVqc2pM8ODewa9r"
        crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.min.js"
        integrity="sha384-BBtl+eGJRgqQAUMxJ7pMwbEyER4l1g+O15P+16Ep7Q9Q+zqX6gSbd85u4mG4QzX+"
        crossorigin="anonymous"></script>

</body>

</html>